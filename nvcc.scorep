#!/bin/bash 

if [ $SCOREP_WRAPPER = "on" ] ;then

    echo "$@" |grep -q -- "-M " ;rc=$?
    isdep=$?
    if [ $isdep = 0 ] ;then
        `which nvcc` "$@"
    else
        scorep --cuda --mpp=mpi --keep-files nvcc "$@"
    fi

else
    `which nvcc` "$@"
fi

